<div class="gr-container">
  
  <%# Featured %>
  <section class="app-section-pm">
    <%= link_to image_tag("app-dashboard-thumb-1.jpg", :class => "app-thumb"), "#" %>
  </section>
  
  <%# Programs %>
  <section class="app-section-pm">
    <div class="app-section-header-alt app-section-header">
      <span class="app-section-header-alt-text">The Programs</span>
    </div>
    <div class="gr-row">
      <% @programs.each do |program|%>
        <section class="gr-col-4">
          <%= render "shared/snippet", :thumb => "app-programs-1-thumb.png", :link => dashboard_program_path(program), :title => program.title, :subtitle => "subtitle", :caption => "caption" %>
        </section>
      <% end %>
    </div>
  </section>
  
  <%# Training %>
  <section class="app-section-pm">
    <div class="app-section-header-alt app-section-header">
      <span class="app-section-header-alt-text">The Training</span>
    </div>
    <div class="gr-row">
      <% @trainings.each do |training|%>
        <section class="gr-col-4">
          <%= render "shared/snippet", :thumb => "app-programs-1-thumb.png", :link => dashboard_training_path(training), :title => training.title, :subtitle => "subtitle", :caption => "caption" %>
        </section>
      <% end %>
    </div>
  </section>
</div>